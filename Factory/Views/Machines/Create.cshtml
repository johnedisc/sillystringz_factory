@{
  Layout = "_Layout";
}

@using Factory.Models
@model Factory.Models.Machine

<div>
  <span>machines.</span>
</div>
<div>
  @if (Model != null)
  {
    @using (Html.BeginForm("Edit","Machines"))
    {
      <span>change the name:</span> 
      @Html.HiddenFor(mac => mac.MachineId)
      @Html.EditorFor(mac => mac.Name)
      <input type="submit" value="edit">
    }
  }
  else
  {
    @using (Html.BeginForm())
    {
      <span>machine name:</span> 
      @Html.TextBoxFor(mac => mac.Name)
      <input type="submit" value="create">
    }
  }
</div>
<div>
  @Html.ActionLink("go home","Index","Home")
</div>
